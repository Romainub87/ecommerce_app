<div class="filter-form rounded-lg mx-[1vw] lg:mx-[5vw] xl:mx-[12vw]">
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert px-4 py-3 rounded mb-2
                {% if label == 'success' %}bg-green-100 text-green-800 border border-green-400
                {% elseif label == 'error' %}bg-red-100 text-red-800 border border-red-400
                {% elseif label == 'warning' %}bg-yellow-100 text-yellow-800 border border-yellow-400
                {% else %}bg-blue-100 text-blue-800 border border-blue-400{% endif %}">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}
</div>
